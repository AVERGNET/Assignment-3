<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/homePageColor"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/welcome_home"
        android:textColor="@color/colorAccent"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:layout_marginLeft="20dp"
        tools:layout_marginRight="20dp"
        tools:layout_marginTop="40dp" />

    <Button
        android:id="@+id/buttonActivity2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Activity 2"
        tools:layout_marginLeft="20dp"
        tools:layout_marginRight="20dp"
        tools:layout_marginTop="20dp" />

    <Button
        android:id="@+id/buttonActivity3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Activity 3"
        tools:layout_marginLeft="20dp"
        tools:layout_marginRight="20dp"
        tools:layout_marginTop="40dp" />
</LinearLayout>